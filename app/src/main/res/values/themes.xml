<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cickmoviev2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryColor</item>
        <item name="colorOnPrimary">@color/textOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/darkSecondaryColor</item>
        <item name="colorOnSecondary">@color/textOnPrimary</item>
        <item name="android:textColorSecondary">@color/textOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/textOnPrimary</item>
        <item name="android:textColorHint">@color/lightPrimaryColor</item>
        <item name="searchViewStyle">@style/SearchViewAppearance</item>
    </style>

    <style name="SearchViewAppearance" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="submitBackground">@color/darkestPrimaryColor</item>
        <item name="queryBackground">@color/darkestPrimaryColor</item>
        <item name="queryHint">@string/searching</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PoppinsBoldTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="WhiteTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/textOnPrimary</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextContent.Primary">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextContent.SubText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textOnPrimary</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textColor">@color/textOnSecondary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextFrame" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextFrame.Title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextFrame.Aired">
        <item name="android:textSize">14sp</item>
    </style>
</resources>